---
# This file originally copied from prometheus/systemd_exporter:
# https://github.com/prometheus-community/systemd_exporter/blob/9f476c669993db46702116f70ce88dce4d1fd475/.yamllint

extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  commas: disable
  comments: disable
  comments-indentation: disable
  document-start: disable
  indentation:
    spaces: consistent
    indent-sequences: consistent
  key-duplicates:
    ignore: |
      config/testdata/section_key_dup.bad.yml
  line-length: disable
  truthy:
    ignore: |
      .github/workflows/codeql-analysis.yml
      .github/workflows/funcbench.yml
      .github/workflows/fuzzing.yml
      .github/workflows/prombench.yml
      .github/workflows/golangci-lint.
